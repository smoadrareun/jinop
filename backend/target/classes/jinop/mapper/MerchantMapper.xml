<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jinop.mapper.MerchantMapper">
    <!--因为在sqlMapConfig.xml中配置了别名，所以直接写merchant就可以-->
    <select id="checkMerchant" parameterType="map" resultType="int">
        SELECT count(1) FROM merinfo
        <where>
            <if test="id!=null and id!=''">
                id=#{id}
            </if>
            <if test="username!=null and username!=''">
                AND username=#{username}
            </if>
            <if test="passwd!=null and passwd!=''">
                AND passwd=#{password}
            </if>
            <if test="name!=null and name!=''">
                AND name=#{name}
            </if>
            <if test="num!=null and num!=''">
                AND num=#{num}
            </if>
            <if test="addinfo!=null and addinfo!=''">
                AND addinfo=#{addinfo}
            </if>
            <if test="level!=null and level!=''">
                AND level=#{level}
            </if>
        </where>
    </select>

    <select id="queryMerchant" parameterType="map" resultType="int">
        SELECT COUNT(1) FROM merinfo WHERE username=#{username} AND passwd=#{passwd} AND level=#{level}
    </select>

    <insert id="addMerchant" parameterType="map" >
        INSERT INTO  merinfo(
            id,username,passwd,name,num,addinfo,level
        )VALUES (
                    #{id},
                    #{username},
                    #{passwd},
                    #{name},
                    #{num},
                    #{addinfo},
                    <choose>
                        <when test="level != null and level !=''">
                            #{level}
                        </when>
                        <otherwise>
                            true
                        </otherwise>
                    </choose>
                )
    </insert>

    <delete id="deleteMerchant" parameterType="int">
        DELETE FROM merinfo where id=#{id}
    </delete>

    <update id="editMerchant" parameterType="map">
        UPDATE merinfo
        <set>
            <if test="username !=null and username !=''">
                username=#{username},
            </if>
            <if test="passwd !=null and passwd !=''">
                passwd=#{passwd},
            </if>
            <if test="name !=null and name !=''">
                name=#{name},
            </if>
            <if test="num !=null and num !=''">
                num=#{num},
            </if>
            <if test="addinfo !=null and addinfo !=''">
                addinfo=#{addinfo},
            </if>
            <if test="level !=null and level !=''">
                level=#{level}
            </if>
        </set>
        WHERE id=#{id}
    </update>

    <select id="showMerchant" parameterType="map" resultType="merchant">
        SELECT * FROM merinfo
        <where>
            <if test="id!=null and id!=''">
                id LIKE CONCAT('%',#{id},'%')
            </if>
            <if test="username!=null and username!=''">
                AND username LIKE CONCAT('%',#{username},'%')
            </if>
            <if test="passwd!=null and passwd!=''">
                AND passwd LIKE CONCAT('%',#{passwd},'%')
            </if>
            <if test="name!=null and name!=''">
                AND name LIKE CONCAT('%',#{name},'%')
            </if>
            <if test="num!=null and num!=''">
                AND num LIKE CONCAT('%',#{num},'%')
            </if>
            <if test="addinfo!=null and addinfo!=''">
                AND addinfo LIKE CONCAT('%',#{addinfo},'%')
            </if>
            <if test="level!=null and level!=''">
                AND level LIKE CONCAT('%',#{level},'%')
            </if>
        </where>
    </select>

    <select id="findMerchant" parameterType="map" resultType="merchant">
        SELECT * FROM merinfo
        <where>
            <if test="id!=null and id!=''">
                id=#{id}
            </if>
            <if test="username!=null and username!=''">
                AND username=#{username}
            </if>
            <if test="passwd!=null and passwd!=''">
                AND passwd=#{passwd}
            </if>
            <if test="name!=null and name!=''">
                AND name=#{name}
            </if>
            <if test="num!=null and num!=''">
                AND num=#{num}
            </if>
            <if test="addinfo!=null and addinfo!=''">
                AND addinfo=#{addinfo}
            </if>
            <if test="level!=null and level!=''">
                AND level=#{level}
            </if>
        </where>
    </select>

</mapper>
